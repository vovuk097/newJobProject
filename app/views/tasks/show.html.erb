<%- model_class = Task -%>
<div class="page-header">
  <h1 align="center"><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><p><strong><%= model_class.human_attribute_name(:key) %>:</strong></p></dt>
  <dd><p><strong><%= @task.key %></strong></p></dd>
  <dt><p><strong><%= model_class.human_attribute_name(:priority) %>:</strong></p></dt>
  <dd><p><strong><%= @task.priority %></strong></p></dd>
  <dt><p><strong><%= model_class.human_attribute_name(:reporter) %>:</strong></p></dt>
  <dd><p><strong><%= @task.reporter %></strong></p></dd>
  <dt><p><strong><%= model_class.human_attribute_name(:assignee) %>:</strong></p></dt>
  <dd><p><strong><%= @task.assignee %></strong></p></dd>
  <dt><p><strong><%= model_class.human_attribute_name(:description) %>:</strong></p></dt>
  <dd><p><strong><%= @task.description %></strong></p></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
            tasks_path, :class => 'btn btn-warning'  %>

<% if current_user.has_role? :admin %>

<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_task_path(@task), :class => 'btn btn-info' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              task_path(@task),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
<%end%>